<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/bidding_item_layout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_margin="0dp"
    android:background="#ccc" >

    <RelativeLayout
        android:id="@+id/relativeLayout1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="8dp"
        android:layout_marginLeft="9dp"
        android:layout_marginRight="8dp"
        android:layout_marginTop="20dp"
        android:background="#444"
        android:paddingBottom="2dp"
        android:paddingLeft="1dp"
        android:paddingRight="2dp"
        android:paddingTop="1dp" >

        <RelativeLayout
            android:id="@+id/inner_frame"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="#fff"
            android:padding="10dp" >

            <ImageView
                android:id="@+id/image_item"
                android:layout_width="80dp"
                android:layout_height="100dp"
                android:scaleType="fitStart"
                android:src="@raw/goos" />

            <TextView
                android:id="@+id/text_item"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_alignTop="@+id/image_item"
                android:layout_marginLeft="16dp"
                android:layout_toRightOf="@+id/image_item"
                android:text="Large Text"
                android:textAppearance="?android:attr/textAppearanceLarge" />

            <TextView
                android:id="@+id/text_price"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignLeft="@+id/text_item"
                android:layout_alignParentRight="true"
                android:layout_below="@+id/text_item"
                android:text="Medium Text"
                android:textAppearance="?android:attr/textAppearanceMedium"
                android:textColor="#f77" />

            <Button
                android:id="@+id/button_command"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/image_item"
                android:layout_centerHorizontal="true"
                android:layout_marginLeft="30dp"
                android:layout_marginRight="30dp"
                android:layout_marginTop="30dp"
                android:text="Button"
                android:textAppearance="?android:attr/textAppearanceLargeInverse" />

        </RelativeLayout>

    </RelativeLayout>

    <ImageView
        android:id="@+id/image_bidder"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_alignParentTop="true"
        android:layout_marginRight="40dp"
        android:maxHeight="30dp"
        android:maxWidth="30dp"
        android:src="@drawable/ic_launcher" />

</RelativeLayout>